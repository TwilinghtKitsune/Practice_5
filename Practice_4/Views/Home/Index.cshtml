@model Practice_4.Models.Calculator
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Task 1</title>
</head>
<body>
    <div style="text-align: center; width: 200px; border-radius: 25px; border-width: 2px; border: thick double #d6d5d4; ">
        @using (Html.BeginForm("Calculator", "Home", FormMethod.Post))
        {
            <p style="border-radius: 25px; height: 30px; border-width: 1px;">@ViewBag.Calculator </p>
            <input name="button" type="submit" value="1" style="width: 30px; height: 30px" />
            <input name="button" type="submit" value="2" style="width: 30px; height: 30px" />
            <input name="button" type="submit" value="3" style="width: 30px; height: 30px" />
            <br>
            <input name="button" type="submit" value="4" style="width: 30px; height: 30px" />
            <input name="button" type="submit" value="5" style="width: 30px; height: 30px" />
            <input name="button" type="submit" value="6" style="width: 30px; height: 30px" />
            <br>
            <input name="button" type="submit" value="7" style="width: 30px; height: 30px" />
            <input name="button" type="submit" value="8" style="width: 30px; height: 30px" />
            <input name="button" type="submit" value="9" style="width: 30px; height: 30px" />
            <br>
            <input name="button" type="submit" value="+" style="width: 30px; height: 30px" />
            <input name="button" type="submit" value="0" style="width: 30px; height: 30px" />
            <input name="button" type="submit" value="-" style="width: 30px; height: 30px" />
            <br>
            <input name="button" type="submit" value="*" style="width: 30px; height: 30px" />
            <input name="button" type="submit" value="/" style="width: 30px; height: 30px" />
            <input name="button" type="submit" value="=" style="width: 30px; height: 30px" />
            <br>
            <br>
            <input name="button" type="submit" value="C" style="width: 90px; height: 30px" />
            <br>
            <br>
        }

    </div>

    <label>@ViewBag.Er</label>

    @using (Html.BeginForm("Task2", "Home", FormMethod.Post))
    {
        <br>
        <br>
        <input type="submit" value="Второе задание" />
    }
</body>
</html>